{
  "restartable": "rs",
  "ignore": [
    ".git",
    "./dist",
    "node_modules/**/node_modules"
  ],
  "verbose": false,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "echo App restarted"
  },
  "watch": [
    "src",
    "./*.ts",
    "./*.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts, js, proto"
}
